<p style="color: green"><%= notice %></p>

<div class="all-categories">
  <div class="header">
    <%= image_tag("back.png", width: 40) %>
    <h1>Categories</h1>
    <%= image_tag("menu.png", width: 40) %>
  </div>

  <div id="categories">
    <% @categories.each do |category| %>
      <div id="<%= dom_id category %>" class="categories">
        <img src="<%= category.icon %>" alt="<%= category.name %>">
        <div class="cat-right">
          <p>
            <%= category.name %>
          </p>
          <p>
            <%= link_to "Show transactions", category_transaktions_path(category) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New category", new_category_path, class: "add-cat" %>
</div>
